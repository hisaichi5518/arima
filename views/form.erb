<form id="searcher" action="/search" method="GET">
  <legend>行動ログ絞込</legend>
  <% Arima::Searcher.schema.each do |column| %>
    <div class="form-group">
      <label for="<%= column.name %>"><%= column.label_name %></label>
      <input type="<%= column.type %>"
             class="form-control"
             id="<%= column.name %>"
             name="<%= column.name %>"
             placeholder="<%= column.placeholder %>"
             value="<%= column.default_value %>">
    </div>
  <% end %>
  <button type="submit" class="btn btn-default btn-lg" id="searcher-submit-btn">
    <span class="glyphicon glyphicon-search" aria-hidden="true"></span> 検索
  </button>
</form>
